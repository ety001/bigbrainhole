{
  "manifest_version": 2,

  "name": "Big Brain Hole",
  "description": "开启全网页的弹幕，前方高能，请注意防护！",
  "version": "1.0",
  "icons": { "128": "icon-128.png" },
  "browser_action": {
    "default_title": "Big Brain Hole",
    "default_icon": "icon-128.png",
    "default_popup": "pop.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/bigbrainhole.css"],
      "js": ["js/jquery-1.11.1.min.js","js/content.js"]
    }
  ],
  "background": { 
    "scripts": ["js/jquery-1.11.1.min.js","js/jquery.md5.js","js/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "notifications",
    "background",
    "activeTab",
    "http://*.bigbrainhole.avosapps.com/",
    "https://*.bigbrainhole.avosapps.com/"
  ]
}
