{
  "manifest_version": 2,

  "name": "Big Brain Hole",
  "description": "开启全网页的弹幕，前方高能，请注意防护！",
  "version": "1.3",
  "icons": { 
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_title": "Big Brain Hole",
    "default_icon": "icon-128.png",
    "default_popup": "pop.html"
  },
  "background": { 
    "scripts": ["js/jquery-1.11.1.min.js","js/jquery.md5.js","js/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "notifications",
    "background",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}
